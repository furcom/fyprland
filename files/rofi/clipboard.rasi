@import "./config.rasi"
@import "./colors.rasi"

configuration {
    show-icons: false;
}

element {
    padding: 4px 16px;
    border-radius: 24px;
    cursor:  pointer;
    spacing: 4px ;
    border:  0;
}
element normal.normal {
    background-color: @primary;
    text-color:       @foreground;
}
element normal.urgent {
    background-color: #ff0000;
    text-color:       @foreground;
}
element normal.active {
    background-color: @hover;
    text-color:       @foreground;
}
element selected.normal {
    background-color: @hover;
    text-color:       @foreground;
}
element selected.urgent {
    background-color: #770000;
    text-color:       @foreground;
}
element selected.active {
    background-color: @primary;
    text-color:       @foreground;
}
element alternate.normal {
    background-color: @primary;
    text-color:       @foreground;
}
element alternate.urgent {
    background-color: #ff0000;
    text-color:       @foreground;
}
element alternate.active {
    background-color: @hover;
    text-color:       @foreground;
}
element-text {
    background-color: transparent;
    cursor:           inherit;
    highlight:        inherit;
    text-color:       inherit;
}
element-icon {
    background-color: transparent;
    size:             1.0000em ;
    cursor:           inherit;
    text-color:       inherit;
}

window {
    padding:          16px;
    background-color: @primary;
    border:           0 0 4px 0;
    border-color:     @background;
    anchor:	      north;
    location:	      north;
    y-offset:	      -88px;
    width:	      100%;
}
mainbox {
    padding: 8px;
    border:  0;
    children: ["inputbar","listview"];
}

message {
    padding:      1px ;
    border-color: @primary;
    border:       2px dash 0px 0px ;
}
textbox {
    text-color: @foreground;
}
listview {
    padding:      0 ;
    scrollbar:    true;
    border-color: @primary;
    layout:       vertical;
    spacing:      8px ;
    fixed-height: 0;
    margin: 8px 0 0 0;
    border:       2px dash 0px 0px ;
    expand: 	  false;
    lines:	  6;
    columns: 	  1;
    border:	  none;
    expand: true;
    cursor: "default";
    cycle: true;
    dynamic: true;
    reverse: false;
}
scrollbar {
    padding:      4px;
    handle-width: 8px ;
    border:       4px;
    border-radius: 24px;
    background-color: @background;
    border-color: @primary;
    handle-color: @primary;
    margin: 0 0 0 16px;
}
sidebar {
    border-color: @primary;
    border:       2px dash 0px 0px ;
}
num-filtered-rows {
    expand:     false;
    text-color: @foreground;
}
num-rows {
    expand:     false;
    text-color: @foreground;
}
textbox-num-sep {
    expand:     false;
    str:        "/";
    text-color: @foreground;
}
inputbar {
    padding:    1px ;
    spacing:    8px ;
    margin: 0 0 0 12px;
    text-color: @foreground;
    children: ["textbox-prompt-colon","entry","mode-switcher"];
}
case-indicator {
    spacing:    0;
    text-color: @foreground;
}
entry {
    text-color:        @foreground;
    cursor:            text;
    spacing:           0;
    placeholder-color: @foreground;
    placeholder:       " Clipboard";
    expand: true;
    width: 128px;
}
prompt {
    spacing:    0;
    text-color: @foreground;
}
textbox-prompt-colon {
    margin:     0px 0.3000em 0.0000em 0.0000em ;
    expand:     false;
    str:        "";
    text-color: inherit;
    width: 32px;
}

mode-switcher{
  enabled: true;
}

button {
    background-color: @background;
    border: 0;
    border-radius: 24px;
    border-color: transparent;
    cursor: pointer;
    margin: 0;
    padding: 0px;
    text-color: @foreground;
    spacing:    0;
    text-color: @foreground;
    width: 152px;
}

button selected {
    background-color: @primary;
    text-color: @foreground;
}
